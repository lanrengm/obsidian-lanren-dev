{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Dev",
			"type": "shell",
			"command": "yarn run dev",
			"group": "test",
			"presentation": {
				"echo": false,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			// 本 task 依赖于 windows 平台的 xcopy 命令
			"label": "Build",
			"type": "shell",
			"command": "yarn run build && xcopy /y manifest.json .\\lanren-plugin\\ && xcopy /y main.js .\\lanren-plugin.\\ && xcopy /y styles.css .\\lanren-plugin.\\",
			"group": "build",
			"presentation": {
				"echo": false,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			// 本 task 依赖于 windows 平台的 xcopy 命令
			// 安装到正式库
			"label": "Install",
			"type": "shell",
			"command": "xcopy /s/y lanren-plugin D:\\Dropbox\\.obsidian\\plugins\\lanren-plugin\\",
			"group": "build",
			"presentation": {
				"echo": false,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		}
	]
}